<UserControl x:Class="ZapretDesktop.ListButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="Main"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800"
             Loaded="UserControl_OnLoaded">
    <RadioButton x:Name="ListButtonBody"
                 Style="{StaticResource ListButtonBodyStyle}"
                 GroupName="group2"
                 Checked="ListButtonBody_OnChecked"
                 Unchecked="ListButtonBody_OnUnchecked"
                 MouseEnter="ListButtonBody_OnMouseEnter"
                 MouseLeave="ListButtonBody_OnMouseLeave">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32" />
            </Grid.ColumnDefinitions>
            <Border x:Name="UnsaveIcon" 
                    Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
                <Image Height="7" Source="{DynamicResource UnsaveIcon}"/>
            </Border>
            <Button x:Name="CloseListButton"
                    Grid.Column="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Click="CloseListButton_OnClick">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{Binding ElementName=ListButtonBody, Path=Background}">
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.ToolTip>
                    <ToolTip Content="{DynamicResource CloseButtonToolTipText}" 
                             Placement="Right" 
                             VerticalAlignment="Center"/>
                </Button.ToolTip>
                <Image Height="15" Source="{DynamicResource CloseListIcon}"/>
            </Button>
            <TextBlock x:Name="ListName" 
                       Grid.Column="0"
                       FontSize="13"
                       Foreground="{DynamicResource MainTextColor}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="8,0,8,0"
                       TextTrimming="CharacterEllipsis" />
        </Grid>
    </RadioButton>
</UserControl>
