<UserControl x:Class="ZapretDesktop.StrategyButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Body">
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Setter Property="Foreground" Value="{DynamicResource MainTextColor}"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource ButtonMouseOverColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <UserControl.Resources>
        <ControlTemplate x:Key="StrategyButtonTemplate" TargetType="RadioButton">
            <Border x:Name="border"
                    Height="30"
                    Width="Auto"
                    CornerRadius="9"
                    Margin="4,0,4,0"
                    BorderThickness="0"
                    BorderBrush="{DynamicResource ButtonMouseOverColor}"
                    Background="{DynamicResource ButtonNormalColor}">
                <ContentControl x:Name="txt" Content="{TemplateBinding Content}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonCheckedColor}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonMouseOverColor}"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True"/>
                        <Condition Property="IsEnabled" Value="False" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                        <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonNormalColor}"/>
                        <Setter TargetName="txt" Property="Margin" Value="-1"/>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <RadioButton x:Name="StrategyButtonBody"
                 Template="{StaticResource StrategyButtonTemplate}"
                 MouseEnter="StrategyButtonBody_OnMouseEnter"
                 MouseLeave="StrategyButtonBody_OnMouseLeave"
                 GroupName="group1"
                 Checked="StrategyButtonBody_OnChecked">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="StrategyOptionButton" 
                    Foreground="{Binding ElementName=Body, Path=Foreground}"
                    Grid.Column="1"
                    Width="32" Height="32"
                    Visibility="Collapsed"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="StrategyOptionButton_OnClick">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentControl Content="{TemplateBinding Content}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Content">
                            <Setter.Value>
                                <Image Height="3" Source="{DynamicResource OptionsIcon}"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock x:Name="StrategyNameMask" 
                       Grid.Column="0"
                       Text="{Binding ElementName=StrategyName, Path=Text}"
                       FontSize="{Binding ElementName=StrategyName, Path=FontSize}"
                       Foreground="{Binding ElementName=StrategyName, Path=Foreground}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="{Binding ElementName=StrategyName, Path=Margin}"
                       TextTrimming="CharacterEllipsis"/>
            <avalonEdit:TextEditor x:Name="StrategyName"
                                   Grid.Column="0"
                                   Background="Transparent" BorderThickness="0" 
                                   VerticalAlignment="Center"
                                   FontSize="13" 
                                   Foreground="{Binding ElementName=Body, Path=Foreground}"
                                   Margin="8,0,8,0"
                                   Visibility="Collapsed"
                                   VerticalScrollBarVisibility="Disabled"
                                   IsReadOnly="False"
                                   HorizontalScrollBarVisibility="Hidden"
                                   WordWrap="False"
                                   PreviewKeyDown="StrategyName_OnPreviewKeyDown"
                                   PreviewTextInput="StrategyName_OnPreviewTextInput"
                                   LostFocus="StrategyName_OnLostFocus"
                                   TextChanged="StrategyName_OnTextChanged"/>
        </Grid>
    </RadioButton>
</UserControl>
