<UserControl x:Class="ZapretDesktop.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="Transparent"
             Loaded="SettingsControl_OnLoaded">
    <UserControl.Resources>
        <Style x:Key="SettingsButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Height="30" CornerRadius="9"
                                Margin="4,0,4,0"
                                Background="{DynamicResource ButtonNormalColor}">
                            <ContentControl Content="{TemplateBinding Content}"></ContentControl>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ButtonCheckedColor}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ButtonMouseOverColor}" /> 
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                                Height="20" Width="38"
                                CornerRadius="10" 
                                Background="Yellow">
                            <Ellipse x:Name="EllipseFlag"
                                     Height="12" Width="12" 
                                     Fill="#595A6C" 
                                     HorizontalAlignment="Left"
                                     Margin="4">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="EllipseFlagTranslate" X="0" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="EllipseFlagTranslate"
                                                             Storyboard.TargetProperty="X"
                                                             From="0" To="18"
                                                             Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#696CFF"
                                                            Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <ColorAnimation Storyboard.TargetName="EllipseFlag"
                                                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="EllipseFlagTranslate"
                                                             Storyboard.TargetProperty="X"
                                                             From="18" To="0"
                                                             Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut"></QuarticEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="Border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#424355"
                                                            Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                            <ColorAnimation Storyboard.TargetName="EllipseFlag"
                                                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                            To="#595A6C"
                                                            Duration="0:0:0.3">
                                                <ColorAnimation.EasingFunction>
                                                    <QuarticEase EasingMode="EaseOut" />
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SelectFolderButtonStyle" TargetType="Button">
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip Placement="Bottom" 
                             HorizontalAlignment="Center"
                             Content="{DynamicResource SelectButtonToolTipText}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Margin" Value="0,0,10,0"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Height="{TemplateBinding Height}" 
                                CornerRadius="10"
                                BorderBrush="{DynamicResource MinorTextColor}"
                                Background="Transparent"
                                BorderThickness="1"
                                HorizontalAlignment="Center"
                                Padding="6,0,6,0">
                            <Image Height="3" x:Name="Icon" Source="{DynamicResource OptionsIcon}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource MinorTextColor}" />
                                <Setter TargetName="Border" Property="BorderThickness" Value="0" />
                                <Setter TargetName="Icon" Property="Margin" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
         <Grid.ColumnDefinitions>
             <ColumnDefinition Width="Auto"/>
             <ColumnDefinition Width="*"/>
         </Grid.ColumnDefinitions>
         <Border Background="{DynamicResource PanelBackgroundColor}"
                 Width="200" 
                 CornerRadius="0,10,10,8"
                 Padding="0,4,0,4"
                 BorderThickness="{DynamicResource PanelBorderThickness}"
                 BorderBrush="{DynamicResource PanelBorderColor}">
             <StackPanel>
                 <RadioButton x:Name="GeneralButton" 
                              IsChecked="True"
                              Style="{StaticResource SettingsButtonStyle}" >
                     <StackPanel Orientation="Horizontal">
                         <Border Height="32" Width="32">
                             <Image Height="12" Source="{DynamicResource BrushIcon}" />
                         </Border>
                         <TextBlock Foreground="{DynamicResource MainTextColor}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    FontSize="13" 
                                    Text="{DynamicResource AppearanceSettingsButtonText}"/>
                     </StackPanel>
                 </RadioButton>
                 <RadioButton x:Name="LocalButton" 
                              Style="{StaticResource SettingsButtonStyle}">
                     <StackPanel Orientation="Horizontal">
                         <Border Height="32" Width="32">
                             <Image Height="12" Source="{DynamicResource FolderIcon}" />
                         </Border>
                         <TextBlock Foreground="{DynamicResource MainTextColor}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    FontSize="13" 
                                    Text="{DynamicResource LocalSettingsButtonText}"/>
                     </StackPanel>
                 </RadioButton>
                 <RadioButton x:Name="AboutButton" 
                              Style="{StaticResource SettingsButtonStyle}">
                     <StackPanel Orientation="Horizontal">
                         <Border Height="32" Width="32">
                             <Image Height="14" Source="{DynamicResource AboutIcon}" />
                         </Border>
                         <TextBlock Foreground="{DynamicResource MainTextColor}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center"
                                    FontSize="13" 
                                    Text="{DynamicResource AboutButtonText}"/>
                     </StackPanel>
                 </RadioButton>
             </StackPanel>
         </Border>
        <Grid Grid.Column="1" Height="350" VerticalAlignment="Top"
              Visibility="{Binding ElementName=GeneralButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0"
                       Style="{StaticResource SettingsLeftTextBlock}"
                       Text="{DynamicResource ThemeText}"/>
            <TextBlock Grid.Column="0" Grid.Row="1"
                       Style="{StaticResource SettingsLeftTextBlock}"
                       Text="{DynamicResource LanguageText}"/>
            <Button Grid.Column="1" Grid.Row="0" 
                    VerticalAlignment="Center" 
                    Style="{StaticResource RoundButtonStyle}"
                    Width="Auto" Height="24"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Click="ThemeSelector_OnClick"
                    Loaded="ThemeSelector_OnLoaded">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ThemeSelectorTextBlock" 
                               Foreground="{DynamicResource MainTextColor}"
                               FontSize="13"
                               VerticalAlignment="Center" 
                               Margin="10,0,6,1">
                        Светлая
                    </TextBlock>
                    <Image Height="10" Source="{DynamicResource HideIcon}" Margin="0,0,12,0">
                        <Image.RenderTransform>
                            <RotateTransform CenterX="4" CenterY="4" Angle="-90"></RotateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Button>
            <Button Grid.Column="1" Grid.Row="1" 
                    VerticalAlignment="Center" 
                    Style="{StaticResource RoundButtonStyle}"
                    Width="Auto" Height="24"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Click="LanguageSelector_OnClick"
                    Loaded="LanguageSelector_OnLoaded">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="LanguageSelectorTextBlock" 
                               Foreground="{DynamicResource MainTextColor}"
                               FontSize="13"
                               VerticalAlignment="Center" 
                               Margin="10,0,6,1">
                        Русский
                    </TextBlock>
                    <Image Height="10" Source="{DynamicResource HideIcon}" Margin="0,0,12,0">
                        <Image.RenderTransform>
                            <RotateTransform CenterX="4" CenterY="4" Angle="-90"></RotateTransform>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
            </Button>
        </Grid>
        <Grid Grid.Column="1" Height="350" VerticalAlignment="Top"
              Visibility="{Binding ElementName=LocalButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" 
                       Style="{StaticResource SettingsLeftTextBlock}"
                       Text="{DynamicResource StrategyFolderText}"/>
            <TextBlock Grid.Column="0" Grid.Row="1" 
                       Style="{StaticResource SettingsLeftTextBlock}"
                       Text="{DynamicResource ListFolderText}"/>
            <TextBlock Grid.Column="0" Grid.Row="2" 
                       Style="{StaticResource SettingsLeftTextBlock}"
                       Text="{DynamicResource BinFolderText}"/>
            <TextBlock x:Name="StrategyFolder"
                       Grid.Column="1" Grid.Row="0" 
                       Foreground="{DynamicResource MinorTextColor}"
                       FontSize="13" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,46,0">
                <TextBlock.ToolTip>
                    <ToolTip Placement="Bottom" HorizontalAlignment="Left" />
                </TextBlock.ToolTip>
                С:\Program Files\...\Zapret\Strategies
            </TextBlock>
            <TextBlock x:Name="ListFolder" 
                       Grid.Column="1" Grid.Row="1" 
                       Foreground="{DynamicResource MinorTextColor}"
                       FontSize="13" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,46,0">
                <TextBlock.ToolTip>
                    <ToolTip Placement="Bottom" HorizontalAlignment="Left" />
                </TextBlock.ToolTip>
                С:\Program Files\...\Zapret\Lists
            </TextBlock>
            <TextBlock x:Name="BinFolder" 
                       Grid.Column="1" Grid.Row="2" 
                       Foreground="{DynamicResource MinorTextColor}"
                       FontSize="13" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,46,0">
                <TextBlock.ToolTip>
                    <ToolTip Placement="Bottom" HorizontalAlignment="Left" />
                </TextBlock.ToolTip>
                С:\Program Files\...\Zapret\bin\winws.exe
            </TextBlock>
            <Button Grid.Column="1" Grid.Row="0"
                    Style="{StaticResource SelectFolderButtonStyle}"
                    Click="StrategyFolderButton_OnClick"/>
            <Button Grid.Column="1" Grid.Row="1"
                    Style="{StaticResource SelectFolderButtonStyle}"
                    Click="ListFolderButton_OnClick"/>
            <Button Grid.Column="1" Grid.Row="2"
                    Style="{StaticResource SelectFolderButtonStyle}" 
                    Click="BinFolderButton_OnClick"/>
        </Grid>
        <Grid Grid.Column="1" Height="350" VerticalAlignment="Top"
              Visibility="{Binding ElementName=AboutButton, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>
            <ContentControl Grid.Column="0" Grid.Row="0"
                            Content="{DynamicResource ZapretDesktopVersionText}"/>
            <ContentControl Grid.Column="0" Grid.Row="1"
                            Content="{DynamicResource ZapretDiscordYouTubeVersionText}"/>
            <ContentControl Grid.Column="0" Grid.Row="2"
                            Content="{DynamicResource ZapretDesktopDeveloperText}"/>
            <ContentControl Grid.Column="0" Grid.Row="3"
                            Content="{DynamicResource ZapretDiscordYouTubeDeveloperText}"/>
            <ContentControl Grid.Column="0" Grid.Row="4"
                            Content="{DynamicResource ZapretDeveloperText}"/>
            <TextBlock x:Name="AppVersion" Grid.Column="1" Grid.Row="0" 
                       Foreground="{DynamicResource MainTextColor}"
                       FontSize="13" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,16,0" 
                       Text="1.0.0"/>
            <TextBlock x:Name="ZapretVersion" 
                       Grid.Column="1" Grid.Row="1" 
                       Foreground="{DynamicResource MainTextColor}"
                       FontSize="13" 
                       VerticalAlignment="Center" HorizontalAlignment="Right"
                       Margin="0,0,16,0" 
                       Text="1.0.0"/>
            <StackPanel Grid.Column="1" Grid.Row="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,16,0">
                <Image Source="{DynamicResource GithubIcon}" Height="16" Margin="0,0,5,0"/>
                <TextBlock FontSize="13" 
                           Foreground="DodgerBlue"
                           VerticalAlignment="Center" HorizontalAlignment="Right"
                           Padding="0,0,0,2">
                    <Hyperlink NavigateUri="https://github.com/alt-pulse"
                               RequestNavigate="Hyperlink_OnRequestNavigate">
                        alt-pulse
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,16,0">
                <Image Source="{DynamicResource GithubIcon}" Height="16" Margin="0,0,5,0"/>
                <TextBlock FontSize="13" 
                           VerticalAlignment="Center" HorizontalAlignment="Right"
                           Padding="0,0,0,2">
                    <Hyperlink NavigateUri="https://github.com/Flowseal"
                               RequestNavigate="Hyperlink_OnRequestNavigate">
                        Flowseal
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="4" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" HorizontalAlignment="Right"
                        Margin="0,0,16,0">
                <Image Source="{DynamicResource GithubIcon}" Height="16" Margin="0,0,5,0"/>
                <TextBlock FontSize="13" 
                           VerticalAlignment="Center" HorizontalAlignment="Right"
                           Padding="0,0,0,2">
                    <Hyperlink NavigateUri="https://github.com/bol-van"
                               RequestNavigate="Hyperlink_OnRequestNavigate">
                        bol-van
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>    
</UserControl>
