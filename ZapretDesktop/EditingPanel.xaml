<UserControl x:Class="ZapretDesktop.EditingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <UserControl.RenderTransform>
        <TranslateTransform x:Name="EditingPanelTranslate" />
    </UserControl.RenderTransform>
    <UserControl.Resources>
        <ControlTemplate x:Key="EditingPanelButtonTemplate" 
                         TargetType="ToggleButton">
            <ContentControl x:Name="Text" 
                            Foreground="{TemplateBinding Foreground}" 
                            Content="{TemplateBinding Content}"/>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid Background="{x:Null}" Visibility="Visible">
        <Border Margin="50,32,50,32" 
                Background="{DynamicResource EditingPanelBackgroundColor}" 
                CornerRadius="48"
                BorderThickness="{DynamicResource PanelBorderThickness}"
                BorderBrush="{DynamicResource PanelBorderColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="SearchButton"
                                 Grid.Column="1" 
                                 Background="{DynamicResource SearchBoxBackgroundColor}" 
                                 Margin="0,4,5,4"
                                 Cursor="IBeam"
                                 Checked="SearchButton_OnChecked"
                                 Unchecked="SearchButton_OnUnchecked">
                        <RadioButton.Template>
                            <ControlTemplate TargetType="RadioButton">
                                <Border x:Name="border"
                                        CornerRadius="12"
                                        Background="{TemplateBinding Background}"
                                        HorizontalAlignment="Left">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="22" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image x:Name="SearchIcon" 
                                               Height="12" 
                                               Margin="4,0,0,0" 
                                               Source="{DynamicResource SearchIcon}"/>
                                        <ContentPresenter x:Name="content"
                                                          Content="{TemplateBinding Content}" 
                                                          Margin="2,0,4,0"
                                                          Grid.Column="1" IsHitTestVisible="False"/>
                                        <StackPanel x:Name="Buttons" 
                                                    Visibility="Collapsed" 
                                                    Grid.Column="2"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Center"
                                                    Cursor="Arrow"
                                                    Margin="0,0,3,0">
                                            <TextBlock x:Name="SearchMatches"
                                                       Height="18"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource MainTextColor}"
                                                       Margin="0,0,4,0">
                                                <TextBlock.ToolTip>
                                                    <ToolTip Content="{DynamicResource MatchesToolTipText}" 
                                                             Placement="Bottom" 
                                                             HorizontalAlignment="Center"/>
                                                </TextBlock.ToolTip>
                                                1/5
                                            </TextBlock>
                                            <Button x:Name="UpSearchButton" 
                                                    Width="18" 
                                                    Height="18"
                                                    Style="{StaticResource RoundButtonStyle}"
                                                    Margin="0,0,3,0"
                                                    BorderThickness="0"
                                                    Click="UpSearchButton_OnClick">
                                                <Button.ToolTip>
                                                    <ToolTip Content="{DynamicResource UpButtonToolTipText}" 
                                                             Placement="Bottom" 
                                                             HorizontalAlignment="Center"/>
                                                </Button.ToolTip>       
                                                <Image Height="12" 
                                                       Source="{DynamicResource UpDownIcon}"/>
                                            </Button>
                                            <Button x:Name="DownSearchButton" 
                                                    Width="18" 
                                                    Height="18"
                                                    Margin="0,0,3,0"
                                                    Style="{StaticResource RoundButtonStyle}"
                                                    Click="DownSearchButton_OnClick">
                                                <Button.ToolTip>
                                                    <ToolTip Content="{DynamicResource DownButtonToolTipText}" 
                                                             Placement="Bottom" 
                                                             HorizontalAlignment="Center"/>
                                                </Button.ToolTip>
                                                <Image Height="12" 
                                                       Source="{DynamicResource UpDownIcon}">
                                                    <Image.RenderTransform>
                                                        <RotateTransform Angle="180" CenterX="4.5" CenterY="6"/>
                                                    </Image.RenderTransform>
                                                </Image>
                                            </Button>
                                            <Button x:Name="CloseSearchButton" 
                                                    Width="18" 
                                                    Height="18"
                                                    Style="{StaticResource RoundButtonStyle}"
                                                    BorderThickness="0"
                                                    Click="CloseSearchButton_OnClick">
                                                <Button.ToolTip>
                                                    <ToolTip Content="{DynamicResource CloseButtonToolTipText}" 
                                                             Placement="Bottom" 
                                                             HorizontalAlignment="Center"/>
                                                </Button.ToolTip>
                                                <Image Height="8" 
                                                       Source="{DynamicResource CloseSearchIcon}"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="HorizontalAlignment" Value="Stretch" />
                                        <Setter TargetName="Buttons" Property="Visibility" Value="Visible" />
                                        <Setter TargetName="content" Property="IsHitTestVisible" Value="True" />
                                        <Setter TargetName="SearchIcon" Property="Source" 
                                                Value="{DynamicResource SearchIconActivated}" />
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="Transparent" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </RadioButton.Template>
                        <Grid>
                            <TextBlock x:Name="SearchBoxMask"
                                       VerticalAlignment="Center" 
                                       Foreground="{DynamicResource MinorTextColor}"
                                       Text="{DynamicResource SearchButtonText}"/>
                            <avalonEdit:TextEditor x:Name="SearchBox"
                                                   Background="Transparent"
                                                   IsReadOnly="False"
                                                   Visibility="Collapsed"
                                                   HorizontalScrollBarVisibility="Hidden"
                                                   VerticalScrollBarVisibility="Disabled"
                                                   VerticalAlignment="Center"
                                                   Foreground="{DynamicResource MainTextColor}"
                                                   TextChanged="SearchBox_OnTextChanged"
                                                   PreviewKeyDown="SearchBox_OnPreviewKeyDown"/>
                        </Grid>
                    </RadioButton>
                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1"
                                HorizontalAlignment="Right">
                        <ToggleButton x:Name="CopyTextButton"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="3"
                                      Checked="CopyTextButton_OnChecked">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Opacity" Value="0.7"/>
                                    <Setter Property="Foreground" Value="{DynamicResource EditingPanelButtonColor}"/>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Height="18" 
                                                        Width="18">
                                                    <Image Height="14" 
                                                           Source="{DynamicResource EditingPanelCopyIcon}"/>
                                                </Border>
                                                <TextBlock Margin="0,0,4,0" 
                                                           VerticalAlignment="Center" 
                                                           Text="{DynamicResource CopyButtonText}"/>
                                            </StackPanel>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template" Value="{StaticResource EditingPanelButtonTemplate}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Height="18" 
                                                                Width="18">
                                                            <Image Height="10" 
                                                                   Source="{DynamicResource MarkIcon}"/>
                                                        </Border>
                                                        <TextBlock Margin="0,0,4,0" 
                                                                   VerticalAlignment="Center"
                                                                   Text="{DynamicResource CopyButtonCheckedText}"/>
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <ToggleButton x:Name="SaveTextButton"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="3"
                                      Checked="SaveTextButton_OnChecked">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Opacity" Value="0.7"/>
                                    <Setter Property="Foreground" Value="{DynamicResource EditingPanelButtonColor}"/>
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Height="18" 
                                                        Width="18">
                                                    <Image Height="14" 
                                                           Source="{DynamicResource SaveIcon}"/>
                                                </Border>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{DynamicResource SaveButtonText}"/>
                                            </StackPanel>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template" Value="{StaticResource EditingPanelButtonTemplate}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Border Height="18" Width="18">
                                                            <Image Height="10" Source="{DynamicResource MarkIcon}"/>
                                                        </Border>
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="{DynamicResource SaveButtonCheckedText}"/>
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </StackPanel>
                </Grid>
                <avalonEdit:TextEditor x:Name="ListContent" 
                                       Margin="26,2,26,2" Grid.Row="1"
                                       Background="Transparent"
                                       Foreground="{DynamicResource MainTextColor}"
                                       FontFamily="pack://application:,,,/Fonts/#JetBrains Mono Light"
                                       FontSize="14"
                                       IsReadOnly="{Binding ElementName=SearchButton, Path=IsChecked}"
                                       HorizontalScrollBarVisibility="Disabled"
                                       VerticalScrollBarVisibility="Auto"
                                       TextChanged="ListContent_OnTextChanged">
                    <avalonEdit:TextEditor.ContextMenu>
                        <ContextMenu Placement="Mouse" Loaded="ContextMenu_OnLoaded">
                            <ContextMenu.Items>
                                <MenuItem x:Name="Cut" 
                                          Header="{DynamicResource CutMenuItemText}" 
                                          Click="Cut_OnClick">
                                    <MenuItem.Icon>
                                        <Image Height="16" Source="{DynamicResource CutIcon}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="Copy" 
                                          Header="{DynamicResource CopyButtonText}" 
                                          Click="Copy_OnClick">
                                    <MenuItem.Icon>
                                        <Image Height="16" Source="{DynamicResource CopyIcon}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{DynamicResource PasteMenuItemText}" 
                                          Click="Paste_OnClick">
                                    <MenuItem.Icon>
                                        <Image Height="16" Source="{DynamicResource PasteIcon}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="Delete" 
                                          Header="{DynamicResource DeleteMenuItemText}" 
                                          Foreground="Red" 
                                          Click="Delete_OnClick">
                                    <MenuItem.Icon>
                                        <Image Height="16" Source="{DynamicResource DeleteIcon}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{DynamicResource SelectAllMenuItemText}" 
                                          Click="SelectAll_OnClick">
                                    <MenuItem.Icon>
                                        <Image Height="16" Source="{DynamicResource SelectAllIcon}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu.Items>
                        </ContextMenu>
                    </avalonEdit:TextEditor.ContextMenu>
                </avalonEdit:TextEditor>
                <Grid x:Name="WarningMessage"
                      Visibility="Collapsed"
                      Grid.Row="2"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="40,0,40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Height="14" Source="{DynamicResource WarningIcon}"/>
                    <TextBlock Grid.Column="1" 
                               Foreground="DarkOrange" 
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"
                               TextTrimming="CharacterEllipsis"
                               Text="{DynamicResource WarningMessageText}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
